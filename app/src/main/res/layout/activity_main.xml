<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:srcCompat="@drawable/warning_scr" android:id="@+id/main_warning"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:contentDescription="@string/Warning"
            app:layout_constraintTop_toBottomOf="@+id/main_logo" android:layout_marginStart="32dp"
            android:layout_marginEnd="32dp"/>
    <Button
            android:layout_width="258dp"
            android:layout_height="50dp"
            android:id="@+id/age_yes"
            android:background="@drawable/age_yes_btn"
            android:onClick="Age_yes"
            android:textColor="#FFFFFF"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="64dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="64dp"
            android:layout_marginBottom="15dp" app:layout_constraintBottom_toTopOf="@+id/age_no"/>
    <TextView
            android:layout_width="258dp"
            android:layout_height="28dp"
            android:inputType="none"
            android:ems="10"
            android:textSize="24sp"
            android:id="@+id/age_no"
            android:longClickable="false" android:freezesText="true" android:textAlignment="center"
            android:onClick="Age_no"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="64dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="64dp" android:background="@drawable/age_no_btn"
            android:layout_marginBottom="55dp" app:layout_constraintBottom_toBottomOf="parent"/>
    <ImageView
            android:layout_width="320dp"
            android:layout_height="320dp" app:srcCompat="@drawable/hookah_logo"
            android:id="@+id/main_logo"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.7"
            android:contentDescription="@string/Logo"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginEnd="8dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>